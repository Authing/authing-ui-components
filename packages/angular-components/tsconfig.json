{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "ng-ui-components": [
        "dist/ng-ui-components/ng-ui-components",
        "dist/ng-ui-components"
      ]
    }
  },
  "include": ["projects/**/*.ts", "projects/**/*.tsx", "projects/**/*.json"]
}
